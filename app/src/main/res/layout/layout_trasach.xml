<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imagemuonthanhtoan"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:background="@drawable/backgroundmuon"
        android:padding="5dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tvtensachthanhtoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="tên sách"
        android:textSize="20dp"
        android:textColor="#424242"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày trả :"
            android:textSize="17dp"
            android:textColor="#424242"/>
        <TextView
            android:id="@+id/tvngaytrathanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ngày trả"
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:textColor="#424242"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người mượn :"
            android:textSize="17dp"
            android:textColor="#424242"/>
        <TextView
            android:id="@+id/tvtennguoimuonthanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tên người mượn"
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:textColor="#424242"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng :"
            android:textSize="17dp"
            android:textColor="#424242"/>
        <TextView
            android:id="@+id/tvsoluongthanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Số lượng"
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:textColor="#424242"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng số ngày mượn :"
            android:textSize="17dp"
            android:textColor="#424242"/>
        <TextView
            android:id="@+id/tvtongngaymuonthanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:textColor="#424242"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá mượn  :"
            android:textSize="17dp"
            android:textColor="#424242"/>
        <TextView
            android:id="@+id/tvgiamuonthanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:textColor="#FF0000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="/ Ngày"
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:textColor="#424242"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng thanh toán"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvtongthanhtoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnxacnhanthanhtoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#00BCD4"
        android:padding="5dp"
        android:text="Xác nhận đã thanh toán"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        app:cornerRadius="15px"
        android:layout_marginBottom="50dp"/>



</LinearLayout>